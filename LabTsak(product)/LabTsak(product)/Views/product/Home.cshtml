
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_pagelayout.cshtml";
}

<h2>Create Product</h2>
<form action="/product/Create" method="post" style="margin:50px; padding:5px;">
    <input type="text" name="name" class="form-control" placeholder="Product Name" /><br />
    <input type="text" name="price" class="form-control" placeholder="Product price" /><br />
    <input type="text" name="qty" class="form-control" placeholder="Product qty" /><br />
    <input type="text" name="img" class="form-control" placeholder="Product img" /><br />
    <input type="submit" class="btn btn-success" />
</form>

