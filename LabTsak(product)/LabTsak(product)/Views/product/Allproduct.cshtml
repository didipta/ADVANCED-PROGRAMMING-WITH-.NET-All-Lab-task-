
@{
    ViewBag.Title = "Allproduct";
    Layout = "~/Views/Shared/_pagelayout.cshtml";
}

<h2>All product</h2>
<div>
    @foreach (var b in Model)
    {

    <form action="/product/Allproduct" method="post" style="width: 300px; height:300px; text-align:center; border:1px solid black; display:inline-block; margin:10px;">
        <div class="card">
            <img src="~/Content/image/@b.img" class="card-img-top" style="width:200px; height:150px; margin:5px;" alt="...">
            <div class="card-body">
                <h5 class="card-title" style="font-weight:900;">@b.name</h5>
                <input type="hidden" name="pname" value="@b.name" />
                <input type="hidden" name="pprice" value="@b.price" />
                <p class="card-text">@b.price"</p>
                <input type="hidden" name="pid" value="@b.id" />
                <input type="hidden" name="pqty" value="1" />
                <input type="submit" value="Add to cart" class="btn btn-primary" />
            </div>
        </div>
    </form>
        }

</div>
