
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_studentlayout.cshtml";
}

<h1>Edit Student Profile</h1>
<form action="/Student/Edit" method="post" style="margin:50px; padding:5px;">
    <input type="hidden" name="id" value="@Model.id" />
    <input type="text" name="name" value="@Model.name" class="form-control" placeholder="Name" /><br />
    <input type="text" name="dob" value="@Model.dob" class="form-control" placeholder="Date of Birth" /><br />
    <input type="text" name="cgpa" value="@Model.cgpa" class="form-control" placeholder="Cgpa" /><br />
    <input type="submit" class="btn btn-success" />
</form>

